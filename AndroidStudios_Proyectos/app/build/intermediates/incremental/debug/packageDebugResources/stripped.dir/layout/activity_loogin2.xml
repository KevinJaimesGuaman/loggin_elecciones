<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo_app_loggin"
    tools:context=".Loogin2">

    <Space
        android:id="@+id/sep_images"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toEndOf="@+id/imagen_fcyt"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/contenedor_loggin"
        android:layout_width="409dp"
        android:layout_height="116dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="29dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Estudiante">

        <TextView
            android:id="@+id/textView_estudiate"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Por favor Ingresar con la cuenta institucional Estudiantil"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión con Google" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagen_fcyt"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/logo_fcyt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagen_umss"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/umss"
        app:layout_constraintStart_toEndOf="@+id/sep_images"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/bt_Estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/primary_estudent"
        android:text="Estudiante"
        app:layout_constraintEnd_toStartOf="@+id/bt_Administrador"
        app:layout_constraintStart_toEndOf="@+id/bt_Docente"
        app:layout_constraintTop_toBottomOf="@+id/login_text" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="14dp"
        android:text="Tipos de Usuario"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sep_images" />

    <Button
        android:id="@+id/bt_Docente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Docente"
        android:backgroundTint="@color/primary_docente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text" />

    <Button
        android:id="@+id/bt_Administrador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Administrador"
        android:backgroundTint="@color/primary_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text" />

    <LinearLayout
        android:id="@+id/administrador_contenedor"
        android:layout_width="409dp"
        android:layout_height="125dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/secundary_admin"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Estudiante">

        <EditText
            android:id="@+id/userAdministrador"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/secundary_admin"
            android:ems="10"
            android:hint="Usuario Administrador"
            android:inputType="text"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <EditText
            android:id="@+id/contraseñaAdministrador"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/secundary_admin"
            android:ems="10"
            android:hint="Contraseña Administrador"
            android:inputType="textPassword" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>