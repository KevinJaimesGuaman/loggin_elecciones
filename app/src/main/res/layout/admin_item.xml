<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/background_rounded">

    <!-- Contenedor del ítem de votación -->
    <LinearLayout
        android:id="@+id/admin_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/background_rounded">

        <!-- Botón con el nombre de la votación -->
        <Button
            android:id="@+id/nombreVotacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Nombre de la votación"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:stateListAnimator="@null" />

        <!-- Botón de editar -->
        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_border_corte"
            android:contentDescription="Editar"
            android:src="@drawable/edit"
            app:tint="@android:color/black" />

        <!-- Botón de borrar -->
        <ImageButton
            android:id="@+id/btnBorrar"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:background="@drawable/rounded_border_corte"
            android:contentDescription="Borrar"
            android:src="@drawable/borrar"
            app:tint="@android:color/black" />
    </LinearLayout>

</LinearLayout>