<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/borde_elemento_candidato"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <!-- Espacio de selecciÃ³n (Checkbox) -->

    <!-- Contenedor de los textos (nombre y partido) -->
    <CheckBox
        android:id="@+id/checkbox_candidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_plomo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="16dp">

        <!-- Nombre del candidato -->
        <TextView
            android:id="@+id/texto_partido_candidato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans_bold"
            android:text="Nombre del Partido"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Partido en color gris -->
        <TextView
            android:id="@+id/texto_nombre_candidato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans_bold"
            android:text="Mas Informacion"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>