<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo_login"
    tools:context=".Loogin2">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="609dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Space
            android:layout_width="409dp"
            android:layout_height="47dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_umss"
                android:layout_width="130dp"
                android:layout_height="133dp"
                android:src="@drawable/umss"
                tools:ignore="UnknownId" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imagen_fcyt"
                android:layout_width="130dp"
                android:layout_height="133dp"
                android:src="@drawable/logo_fcyt" />

        </LinearLayout>

        <TextView
            android:id="@+id/TipoUsuario_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tipo de Usuario"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_corte_electoral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_corte_electoral_color"
                android:layout_weight="1"
                android:text="Corte Electoral" />

            <Button
                android:id="@+id/bt_Administrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Administrador" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_docente_color"
                android:text="Docente" />

            <Button
                android:id="@+id/bt_estudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_estudiante_color"
                android:layout_weight="1"
                android:text="Estudiante" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Administradorcontenedor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/Administrador_text_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ingrese su Usuario y contrase침a de Administrador"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/usuario_Administrador_loggin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/contrase침a_Administrador_loggin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedorInicioSecion"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Por favor Ingresar con la cuenta institucional"
                android:textSize="20sp" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesi칩n con Google">

            </com.google.android.gms.common.SignInButton>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>